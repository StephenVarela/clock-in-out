<p id="notice"><%= notice %></p>

<h1>Users</h1>

<% unless @users.size.zero? %>
  <table class="table">
    <thead>
      <tr>
        <th>First name</th>
        <th>Last name</th>
        <th>Email</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>


<br>

<%= link_to 'Sign Up', signup_path, class: 'button' %>
<%= link_to :Home, '/', class: 'button' %>