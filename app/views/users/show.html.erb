<p id="notice"><%= notice %></p>

<p>
  <strong>First name:</strong>
  <%= @user.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @user.last_name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

  <div class='total-hours'>
    <h2> This user has clocked <%=number_with_precision(@total_clocked_hours, precision: 2)%> Hours</h2> 
  </div>

<% unless @time_cards.size.zero? %>
  <table class="table">
    <thead>
      <tr>
        <th>User Email</th>    
        <th>Time in</th>
        <th>Time out</th>
        <th>Total Time (Hours)</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @time_cards.each do |time_card| %>
        <tr>
          <td><%= time_card.user.email %></td>
          <td><%= time_card.time_in %></td>
          <td><%= time_card.time_out %></td>
          <td><%= time_card.time_in_hours %></td>
          <td><%= link_to 'Show', time_card %></td>
          <td><%= link_to 'Edit', edit_time_card_path(time_card) %></td>
          <td><%= link_to 'Destroy', time_card, method: :delete %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

<%= link_to 'Home', '/', class: 'button' %>
<%= link_to 'Users', users_path, class: 'button' %>
